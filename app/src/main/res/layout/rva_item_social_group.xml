<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/list_item_background">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/circleListIconSize"
        android:layout_height="@dimen/circleListIconSize"
        app:civ_border_width="@dimen/socialIconBorderWidth"
        app:civ_border_color="@color/socialIconBorderColorInactive"
        style="@style/CircleListIcon"
        android:id="@+id/image"
        android:layout_weight="0"
        android:layout_margin="16dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/value"
            style="@style/TextValue"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hint"
            style="@style/TextHint"/>
    </LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/circleListActionIconSize"
        android:layout_height="match_parent"
        android:id="@+id/iconDelete"
        android:background="@drawable/list_item_background"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/colorAccent"
        android:layout_weight="0"
        android:padding="@dimen/circleListActionIconPadding"
        android:src="@mipmap/ic_delete_orange_big"
        android:layout_marginRight="16dp"/>
</LinearLayout>