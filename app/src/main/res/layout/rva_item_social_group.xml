<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/circleListIconSize"
        android:layout_height="@dimen/circleListIconSize"
        app:civ_border_width="@dimen/socialIconBorderWidth"
        app:civ_border_color="@color/socialIconBorderColorActive"
        style="@style/CircleListIcon"
        android:id="@+id/image"
        android:layout_weight="0"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/value"
            style="@style/TextValue"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hint"
            style="@style/TextHint"/>
    </LinearLayout>
</LinearLayout>